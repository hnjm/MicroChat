<UserControl x:Class="MicroChatClient.Bubble"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MicroChatClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="Docker" Background="Gainsboro" Margin="5" CornerRadius="10">
        <TextBlock x:Name="Text" Margin="10,5,10,5" FontFamily="ReSource/#iconfont" VerticalAlignment="Center" Text="Hello MicroChat" TextWrapping="Wrap"/>
    </Border>
</UserControl>
